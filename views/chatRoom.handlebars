<div class="container">
    <h3 class="center">
        <a href="/userProfile/{{chat.sender._id}}">
            <img src="{{chat.sender.image}}" class="chatroom-users rounded-circle">
        </a>
        <a href="/userProfile/{{chat.receiver._id}}">
            <img src="{{chat.receiver.image}}" class="chatroom-users rounded-circle">
        </a>
    </h3>

    <div id="messages">
        {{#each chat}}
            {{#each chats}}
                {{#if senderMessage}}
                    <div class="media">
                        <a href="/userProfile/{{senderName._id}}">
                            <img src="{{senderName.image}}" class="chatroom-users rounded-circle mr-3">
                        </a>
                        <div class="media-body">
                            <h5 class="mt-0">{{senderMessage}}</h5>
                            <small>{{getLastMoment date 'hour'}}</small>
                        </div>
                    </div>
                    <hr>
                {{/if}}

                {{#if receiverMessage}}
                    <div class="media">
                        <a href="/userProfile/{{receiverName._id}}">
                            <img src="{{receiverName.image}}" class="chatroom-users rounded-circle mr-3">
                        </a>
                        <div class="media-body">
                            <h5 class="mt-0">{{receiverMessage}}</h5>
                            <small>{{getLastMoment date 'hour'}}</small>
                        </div>
                    </div>
                    <hr>
                {{/if}}
            {{/each}}
        {{/each}}
    </div>

    <form action="/chat/{{chat._id}}" method="POST">
        <input type="text" class="form-control" name="chat" id="chat" placeholder="Type message">
        <br>
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>