{{#if received}}
    {{#each received}}
        <div class="media">
            <a href="/startChat/{{sender._id}}">
                <img src="{{sender.image}}" class="mr-3" style="width: 64px">
            </a>

            <div class="media-body">
                <a href="/startChat/{{sender._id}}">
                    <h5 class="mt-0">{{sender.fullname}}</h5>
                </a>

                {{#if receiverRead}}
                    <a href="/startChat/{{sender._id}}">
                        <h5><i class="far fa-envelope-open"></i></h5>
                    </a>
                {{else}}
                    <a href="/startChat/{{sender._id}}">
                        <h5><i class="far fa-envelope"></i></h5>
                    </a>
                {{/if}}
                <small>{{getLastMoment date 'hour'}}</small>

                <a href="/deleteChat/{{_id}}">
                    <h5 class="right"><i class="fa fa-trash-alt"></i></h5>
                </a>
            </div>
        </div>
        <hr>
    {{/each}}
{{else}}

    {{#if sent}}
    {{else}}
        <p>No Chat found...</p>
    {{/if}}

{{/if}}

