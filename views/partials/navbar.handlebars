<nav class="navbar navbar-dark bg-dark fixed-top">
    <a class="navbar-brand" href="/">
        <img src="/img/love.png" width="30" height="30">
    </a>
    {{#if newSmile}}
        <a href="/showSmile/{{newSmile._id}}">
            <i class="far fa-smile"></i>
        </a>
        <style>
            .fa-smile {
                font-size: 30px;
            }
        </style>
        <script>
            $(document.ready(function () {
                setInterval(function () {
                    $('.fa-smile').attr('style', 'color:red');
                }, 10);
                setInterval(function () {
                    $('.fa-smile').attr('style', 'color:blue');
                }, 30);
            }));
        </script>
    {{else}}
        <a class="navbar-brand" href="#">{{title}}</a>
    {{/if}}

    {{#if unread}}
        <a href="/chats" class="navbar-brand">
            <i class="fa fa-envelope" id="letter"></i>
        </a>
        <script>
            $(document.ready(function () {
                setInterval(function () {
                    $('#letter').attr('style', 'color:green');
                }, 10);
                setInterval(function () {
                    $('#letter').attr('style', 'color:blue');
                }, 30);
            }));
        </script>
    {{/if}}

    {{#each user}}
        {{#each friends}}
            {{#if isFriend}}
            {{else}}
                <a class="navbar-brand" href="/showFriendRequest/{{friend._id}}">
                    <i class="fa fa-user"></i>
                </a>
            {{/if}}
        {{/each}}
    {{/each}}

    <button
        class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            {{#if user}}
                <li class="nav-item">
                    <a class="nav-link" href="/singles">
                        <i class="fa fa-users"> Singles</i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/profile">
                        <i class="fa fa-user"> Profile</i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/chats">
                        <i class="fa fa-comment"> Chats</i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/displayPostForm">
                        <i class="fa fa-plus-square"> Create Post</i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/posts">
                        <i class="fas fa-globe"> Posts</i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/friends">
                        <i class="fas fa-user-friends"> Friends</i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">
                        <i class="fas fa-sign-out-alt"> Logout</i>
                    </a>
                </li>
            {{else}}
                <li class="nav-item active">
                    <a class="nav-link" href="/about">About <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/contact">Contact</a>
                </li>
            {{/if}}
        </ul>
    </div>
</nav>