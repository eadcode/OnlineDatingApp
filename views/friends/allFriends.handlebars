{{#each userFriends}}
    {{#each friends}}
        {{#if isFriend}}
            <div class="card" style="width: 18rem;">
                <img src="{{friend.image}}" class="card-img-top" width="64px">
                <div class="card-body">
                    <h5 class="card-title">{{friend.fullname}}</h5>
                    <a href="/userProfile/{{friend._id}}" class="btn btn-primary">View Profile</a>
                </div>
            </div>
        {{/if}}
    {{/each}}
{{/each}}